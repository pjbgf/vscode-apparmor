{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AppArmor",
	"scopeName": "source.apparmor",
	"patterns": [
		{ "include": "#include" },
		{ "include": "#comments" },
		{ "include": "#strings-single" },
		{ "include": "#strings-double" },
		{ "include": "#variables" },
		{ "include": "#operators" },		

		{ "include": "#capability-expression" },
		{ "include": "#network-expression" },
		{ "include": "#alias-expression" },
		{ "include": "#link-expression" },
		{ "include": "#allow-expression" },
		{ "include": "#deny-expression" },
		{ "include": "#owner-expression" },
		{ "include": "#other-expression" },
		{ "include": "#mount-expression" },
		{ "include": "#pivotroot-expression" },
		{ "include": "#ptrace-expression" }
		
	],
	"repository": {

		"include": {
			"patterns": [{
				"name": "constant.language.include",
				"match": "^(\\s)*(#){0,1}include"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.number-sign",
				"match": "#(\\s|\\S)*$"
			}]
		},
		"strings-single": {
			"name": "string.quoted.single.aa",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.aa",
					"match": "\\."
				}
			]
		},
		"strings-double": {
			"name": "string.quoted.double.aa",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.aa",
					"match": "\\."
				}
			]
		},
		"variables": {
			"patterns": [{
				"name": "variable",
				"match": "@{(\\w)*}"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator",
				"match": "=|->"
			}]
		},


		"capability-expression": {
		"patterns": [{ "include": "#capability.action" }, { "include": "#capability.value" }]
		},
		"capability.action": {
		"match": "capability",
		"name": "keyword.other.capability"
		},
		"capability.value": {
		"match": "\\b(audit_control|audit_read|audit_write|block_suspend|chown|dac_override|dac_read_search|fowner|fsetid|ipc_lock|ipc_owner|kill|lease|linux_immutable|mac_admin|mac_override|mknod|net_admin|net_bind_service|net_broadcast|net_raw|setgid|setfcap|setpcap|setuid|sys_admin|sys_boot|sys_chroot|sys_module|sys_nice|sys_pacct|sys_ptrace|sys_rawio|sys_resource|sys_time|sys_tty_config|syslog|wake_alarm)\\b",
		"name": "support.type.capability.value"
		},

		"network-expression": {
		"patterns": [{ "include": "#network.action" }, { "include": "#network.domain" }, { "include": "#network.type" }, { "include": "#network.protocol" }]
		},
		"network.action": {
		"match": "network",
		"name": "keyword.other.network"
		},
		"network.domain": {
		"match": "\\b(unspec|unix|inet6|inet|ax25|ipx|appletalk|netrom|bridge|atmpvc|x25|inet6|rose|netbeui|security|key|netlink|packet|ash|econet|atmsvc|rds|sna|irda|pppox|wanpipe|llc|ib|mpls|can|tipc|bluetooth|iucv|rxrpc|isdn|phonet|ieee802154|caif|alg|nfc|vsock|kcm|qipcrtr|smc)\\b",
		"name": "support.type.network.domain"
		},
		"network.type": {
		"match": "\\b(stream|dgram|seqpacket|rdm|raw|packet)\\b",
		"name": "support.type.network.type"
		},
		"network.protocol": {
		"match": "\\b(tcp|udp|icmp)\\b",
		"name": "support.type.network.protocol"
		},

		"alias-expression": {
		"patterns": [{ "include": "#alias.action" } ]
		},
		"alias.action": {
		"match": "alias",
		"name": "keyword.other.alias"
		},

		"permission": {
		"match": "\\b[rwakl]+\\b",
		"name": "string.regexp.permission"
		},
		"path": {
		"match": "(/[^/ ]*)+/?",
		"name": "string.unquoted"
		},
		"file.action": {
		"match": "file",
		"name": "keyword.other.file"
		},

		"link-expression": {
		"patterns": [{ "include": "#link.action" }, { "include": "#path" }, { "include": "#path" } ]
		},
		"link.action": {
		"match": "link",
		"name": "keyword.other.link"
		},

		"allow-expression": {
		"patterns": [{ "include": "#allow.action" }, { "include": "#file.action" }, { "include": "#permission" }, { "include": "#path" }]
		},
		"allow.action": {
		"match": "allow",
		"name": "keyword.other.allow"
		},

		"deny-expression": {
		"patterns": [{ "include": "#deny.action" }, { "include": "#file.action" }, { "include": "#permission" }, { "include": "#path" }]
		},
		"deny.action": {
		"match": "deny",
		"name": "keyword.other.deny"
		},

		"owner-expression": {
		"patterns": [{ "include": "#owner.action" }, { "include": "#permission" }, { "include": "#path" }]
		},
		"owner.action": {
		"match": "owner",
		"name": "keyword.other.owner"
		},

		"other-expression": {
		"patterns": [{ "include": "#other.action" }, { "include": "#permission" }, { "include": "#path" }]
		},
		"other.action": {
		"match": "other",
		"name": "keyword.other.other"
		},

		"mount-expression": {
		"patterns": [{ "include": "#mount.action" } ]
		},
		"mount.action": {
		"match": "mount",
		"name": "keyword.other.mount"
		},

		"pivotroot-expression": {
		"patterns": [{ "include": "#pivotroot.action" } ]
		},
		"pivotroot.action": {
		"match": "pivot_root",
		"name": "keyword.other.pivotroot"
		},

		"ptrace-expression": {
		"patterns": [{ "include": "#ptrace.action" } ]
		},
		"ptrace.action": {
		"match": "ptrace",
		"name": "keyword.other.ptrace"
		}
		
		
	}
}